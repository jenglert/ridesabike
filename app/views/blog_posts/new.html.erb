<div class="padding_left_10px">
	<%= page_title 'Create a Blog Post' %>
	
	<%= error_messages_for :blog_post %>
	
	<% form_for(@blog_post) do |f| %>
	  <p>
	    <b>Blog Post Title:</b><br />
	    <%= f.text_field :title %>
	  </p>
	
	  <p>
	    <b>Post Contents:</b><br />
	    <%= f.text_area :post %>
	  </p>
	
	  <%= f.hidden_field :user_id %>
		
	  <p>
	    <%= f.submit 'Create Blog Post' %>
	  </p>
	<% end %>
	
	<%= link_to 'Back', :back %>
</div>