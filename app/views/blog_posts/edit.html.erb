<h1>Editing blog post</h1>

<%= error_messages_for :blog_post %>

<% form_for(@blog_post) do |f| %>
  <p>
    <b>Title</b><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <b>Post</b><br />
    <%= f.text_area :post %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @blog_post %> |
<%= link_to 'Back', :back %>
